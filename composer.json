{
  "type": "project",
  "require": {
    "symfony/dom-crawler": "^5.4",
    "symfony/http-client": "^5.4",
    "symfony/css-selector": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpunit/php-code-coverage": "^9.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --coverage-html coverage"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
